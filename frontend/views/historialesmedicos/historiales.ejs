<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historiales Médicos</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
</head>
<body>
    <h1>Historiales Médicos</h1>
    <table id="historialesTable" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>PacienteID</th>
                <th>Fecha</th>
                <th>Diagnóstico</th>
                <th>Tratamiento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% historiales.forEach(function(historial) { %>
                <tr>
                    <td><%= historial.ID %></td>
                    <td><%= historial.PacienteID %></td>
                    <td><%= historial.Fecha %></td>
                    <td><%= historial.Diagnostico %></td>
                    <td><%= historial.Tratamiento %></td>
                    <td>
                        <a href="/historialesmedicos/<%= historial.ID %>/edit">Editar</a>
                        <form action="/historialesmedicos/<%= historial.ID %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#historialesTable').DataTable();
        });
    </script>
</body>
</html>
